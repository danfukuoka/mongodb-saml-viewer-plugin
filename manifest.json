{
  "manifest_version": 3,
  "name": "MongoDB SAML Response Viewer",
  "version": "0.5",
  "description": "View the SAML response to help debug federated authentication in MongoDB Atlas.",
  "permissions": ["webRequest"],
  "host_permissions": ["https://auth.mongodb.com/sso/saml2/*"],
  "optional_host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  }
}
